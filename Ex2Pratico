#include <stdio.h>
#define TAM 100

void inicializarMatriz(int m[TAM][TAM])
{
    int ln, col;
    for (ln = 0; ln < TAM; ln++)
    {
        for (col = 0; col < TAM; col++)
        {
            m[ln][col] = 0;
        }
    }
}

void preencherMatriz(int *matriz)
{
    for (int i = 0; i < TAM * TAM; i++) {
        *(matriz + i) = i + 1;  
    }
}

void imprimirMatriz(int m[TAM][TAM])
{
    int ln, col;
    for (ln = 0; ln < TAM; ln++)
    {
        for (col = 0; col < TAM; col++)
        {
            printf("%d ", m[ln][col]);
        }
        printf("\n \n");
    }
}

int main()
{

    int opcao;
    int matriz[TAM][TAM];

    while(1)
    {
        printf("[1] - Inicializar matriz\n[2] - Preencher matriz \n[3] - Imprimir matriz preenchida\n[4] - Sair\n");
        scanf("%d", &opcao);

        switch (opcao)
        {
        case 1:
            inicializarMatriz(matriz);
            break;
        case 2:
            preencherMatriz(&matriz[0][0]);
            break;
        case 3:
            imprimirMatriz(matriz);
            break;
        case 4:
            printf("\nEncerrando...");
            return 0;
            break;
        default:
            printf("Opção inválida, digite um número de 1 a 4.");
            break;
        }
    } ;

    return 0;
}
